#!/usr/bin/env sh

# File to monitor the pointer state
LOCK_FILE=/tmp/$USER.pointer.lock

# If cursor is NOT locked
if ! [[ -f $LOCK_FILE ]]; then
    # Move the cursor to the screen corner
    xdotool mousemove 0 1429

    # Disable xinput device
    for id in $(xinput |\
            grep -w slave |\
            grep -w pointer |\
            grep -Eow 'id=[0-9]+' |\
            grep -Eo '[0-9]+'); do
        xinput disable $id
    done

    # Create .lock file
    touch $LOCK_FILE
# If cursor is already locked
else
    # Move the cursor to the center of the screen
    xdotool mousemove 3200 720

        # Disable xinput device
        for id in $(xinput |\
            grep -w slave |\
            grep -w floating |\
            grep -Eow 'id=[0-9]+' |\
            grep -Eo '[0-9]+'); do
        xinput enable $id
    done

    # Remove .lock file
    rm $LOCK_FILE
fi
